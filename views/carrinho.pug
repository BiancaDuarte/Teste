doctype html
html
head
	title= "catalogo"
	script(src='/javascripts/jquery-3.1.1.min.js')
	script(src='/javascripts/bootstrap.min.js')
	script(src='/javascripts/materialize.min.js')
	script(src='/javascripts/jquery.zoom.min.js')
	script(src='/javascripts/javascript.js')
	link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
	link(rel='stylesheet', href='/stylesheets/materialize.min.css')
	link(rel='stylesheet', href='/stylesheets/font-awesome.min.css')
	link(rel='stylesheet', href='https://fonts.googleapis.com/icon?family=Material+Icons')
	link(rel='stylesheet', href='/stylesheets/style.css')

	body

		include logo
		include body
	
		div.titulopromo
			h2 Meu Carrinho
		div.branco
			table.cart(width='100%' cellspacing='0' cellpadding='5')
				tbody
					tr.cartHeader(valign='middle')
						td.cart-dashed-line-border(colspan='2')
							| Produto
						td.cart-dashed-line-border(width='90px', align='right')
							| Quantidade
						td.cart-dashed-line-border.cart-item-unit-price(width='110px' align='right')
							| Valor unit&aacute;rio
						td.cart-dashed-line-border.cart-item-total-price(width='90px' align='right')
							| Valor total
				- for (var x = 0; x < 72; x++)
						if dados.quadros[x].Carrinho == "s"
							tr(valign='top', align='left')
								td.cart-dashed-line-border(width='55px' align='left')
									a(href='/pd-2D79CF.html')
										img.imageBorder(width='55' src=dados.quadros[x].Imagem)
								td.cart-dashed-line-border(width='100%')
									.nomeproduto #{dados.quadros[x].Nome}
									a.dropdown-button.btn(data-beloworigin='true', href='#', data-activates='dropdown1') Selecione o tamanho:
									ul#dropdown1.dropdown-content
										li
											a#op1(data-id=dados.quadros[x].Preço1, data-estoque=dados.quadros[x].Estoque1).opcao #{dados.quadros[x].Tamanho1}
										li
											a#op2(data-id=dados.quadros[x].Preço2, data-estoque=dados.quadros[x].Estoque2).opcao #{dados.quadros[x].Tamanho2}
										a(class="cart" data-id=dados.quadros[x].Código)
										
									button.cart(data-id= +dados.quadros[x].Código) Remover Carrinho

								td.cart-dashed-line-border(width='100%')

								td.cart-dashed-line-border(align='right')
									span.productQuantity
										input#2D79CFC4CB4B_quantity.productQuantityField(type='text' value='1' onkeydown="$('#shipping-info').hide(); $('#update-quantity-button-2D79CF12797099').show(); $('#cart-buttons').hide();")
										span.iluria-cart-mini-button
											a#update-quantity-button-2D79CF12797099(style='display:none' href="javascript: Iluria.inlineCart.updateQuantity('2D79CF',document.getElementById('2D79CFC4CB4B_quantity').value,  12797099);")
												| Confirma

								td.cart-dashed-line-border(width='100%')
									.nomeproduto 
										p(id="preço") R$ #{dados.quadros[x].Preço1}
								td.cart-dashed-line-border(width='100%')
									.nomeproduto #{dados.quadros[x].Preço1}


				- for (var x = 0; x < 13; x++)
					if dados.canecas[x].Carrinho == "s"
						tr(valign='top', align='left')
							td.cart-dashed-line-border(width='55px' align='left')
								a(href='/pd-2D79CF.html')
									img.imageBorder(width='55' src=dados.canecas[x].Imagem)

							td.cart-dashed-line-border(width='100%')
								.nomeproduto #{dados.canecas[x].Nome}
									.tamanhoproduto  #{dados.canecas[x].Capacidade}

										script.
											if(7 == 1)
											$("#productShippingTime-1").text("7 dia útil");
											else if(7 == 0)
											$("#productShippingTime-1").text("mesmo dia");
											else
											$("#productShippingTime-1").text("7 dias úteis");      
										.iluria-cart-mini-button
											a(href="javascript: Iluria.inlineCart.removeFromCart('2D79CF', 12797099);")
												| remover do carrinho

							td.cart-dashed-line-border(align='right')
								span.productQuantity
									input#2D79CFC4CB4B_quantity.productQuantityField(type='text' value='1' onkeydown="$('#shipping-info').hide(); $('#update-quantity-button-2D79CF12797099').show(); $('#cart-buttons').hide();")
									span.iluria-cart-mini-button
										a#update-quantity-button-2D79CF12797099(style='display:none' href="javascript: Iluria.inlineCart.updateQuantity('2D79CF',document.getElementById('2D79CFC4CB4B_quantity').value,  12797099);")
											| Confirmar
									
