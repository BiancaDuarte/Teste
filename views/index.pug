extends layout
	
block promo
	#contenedor
	#myCarousel.carousel.slide
		ol.carousel-indicators
			li.active(data-target='#myCarousel', data-slide-to='0')         
			li(data-target='#myCarousel', data-slide-to='1')       
		// Carousel items
		.carousel-inner
			.active.item
				a(href="http://localhost:51000/promocao"): img(src='/images/promoquadros.png')       
			.item
				a(href="http://localhost:51000/canecas"): img(src='/images/promoçãocaneca.jpg')           
			
		// Carousel nav
		a.carousel-control.left(href='#myCarousel', data-slide='prev') &lsaquo;      
		a.carousel-control.right(href='#myCarousel', data-slide='next') &rsaquo;


block content
	br
	div.titulopromo
		h2 Lançamentos do mês
	div.branco
		div.container
				div.row
					- for (var x = 85; x < 91; x++)
						div.col-md-4.imagem
									h2= dados[x].Nome
										p
											.grid
												figure.effect-zoe
													a(href="http://localhost:51000/produto/detalhado/"+dados[x].Código)
														img(src=dados[x].Imagem)
														figcaption
															p.icon-links
																a(href='#' class='addCount')
																	i.material-icons.small shopping_cart
																a(href="http://localhost:51000/post/favoritos" id='favorito')  
																	i.material-icons.small star
												div
													h1 A partir de R$#{dados[x].Preço1}
													p ou a partir de 3xR$15,90

