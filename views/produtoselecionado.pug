doctype html
html
head
	title= "catalogo"
	link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
	link(rel='stylesheet', href='/stylesheets/materialize.min.css')
	link(rel='stylesheet', href='/stylesheets/font-awesome.min.css')
	link(rel='stylesheet', href='https://fonts.googleapis.com/icon?family=Material+Icons')
	link(rel='stylesheet', href='/stylesheets/style.css')
	script(src='/javascripts/jquery-3.1.1.min.js')
	script(src='/javascripts/jquery.zoom.min.js')
	script(src='/javascripts/bootstrap.min.js')
	script(src='/javascripts/materialize.min.js')
	script(src='/javascripts/javascript.js')

body

	include logo 
	include body

	div.titulopromo
	div.branco
		div.container
			div.col-md-6
				br
				span#ex1.zoom
					img(src=dados[cod].Imagem)
			div.col-md-6.info
				h1 #{dados[cod].Nome}
				div.informacoes.info
					h3#bla  A partir de R$ #{dados[cod].Preço1}
					h5 Selecione o tamanho(com moldura):
				.row
					div.col-md-1
					div.col-md-4
						a.waves-effect.waves-light.btn-large Tamanho 1
					div.col-md-2
					div.col-md-4
						a.waves-effect.waves-light.btn-large Tamanho 2
					div.col-md-1

				div.dados
					b Moldura: 
					p #{dados[cod].Moldura}
					b Impressão e acabamento:
					p #{dados[cod].Impressão}
					p Obs:#{dados[cod].Observações}
					b Estoque:  #{dados[cod].Estoque1}

				a.waves-effect.waves-light.btn-large Comprar
					i.material-icons.left shopping_cart
	

